<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_bin_conversion_view_tree" model="ir.ui.view">
            <field name="name">durpro_bin_conversion.product.bin.conversion.view.tree</field>
            <field name="model">product.bin.conversion</field>
            <field name="arch" type="xml">
                <tree js_class="bin_conversion_tree">
                    <field name="loc_case"/>
                    <field name="target_location_path" readonly="False"/>
                </tree>
            </field>
        </record>

        <record id="action_view_bin_conversions" model="ir.actions.act_window">
            <field name="name">Product Bin to Location Conversions</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.bin.conversion</field>
            <field name="view_mode">tree</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There are no conversions planned. Click "Update Bin Locations" to refresh the list.
                </p>
            </field>
        </record>

        <record id="stock_putaway_list" model="ir.ui.view">
            <field name="name">durpro_bin_conversion.product.putaway.list</field>
            <field name="model">stock.putaway.rule</field>
            <field name="inherit_id" ref="stock.stock_putaway_list"/>
            <field name="arch" type="xml">
                <tree position="attributes">
                    <attribute name="js_class">putaway_rule_tree</attribute>
                </tree>
            </field>
        </record>

        <record id="action_create_locations" model="ir.actions.server">
            <field name="name">Create Locations</field>
            <field name="model_id" ref="durpro_bin_conversion.model_product_bin_conversion"/>
            <field name="binding_model_id" ref="durpro_bin_conversion.model_product_bin_conversion"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">records.action_create_locations()</field>
        </record>
        <record id="action_create_putaway_rules" model="ir.actions.server">
            <field name="name">Create Putaway Rules</field>
            <field name="model_id" ref="durpro_bin_conversion.model_product_bin_conversion"/>
            <field name="binding_model_id" ref="durpro_bin_conversion.model_product_bin_conversion"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">records.action_create_putaway_rules()</field>
        </record>

        <menuitem name="Bin Conversions" id="bin_conversions_menu" parent="stock.menu_stock_root"
                  action="action_view_bin_conversions"/>

    </data>
</odoo>