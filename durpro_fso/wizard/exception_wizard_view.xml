<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="set_exception_wizard_form" model="ir.ui.view">
        <field name="name">durpro_fso.set_exception.wizard.form</field>
        <field name="model">durpro_fso.set_exception.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Set Exception">
                <div>
                    <h4>Please write a reason for this exception:</h4>
                    <group>
                        <group>
                            <field name="exception_note"/>
                        </group>
                    </group>
                </div>
                <footer>
                    <button string="Set Exception" name="set_exception" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
</odoo>