<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="manage_intervention_wizard_form" model="ir.ui.view">
        <field name="name">durpro_fso.manage_intervention.wizard.form</field>
        <field name="model">durpro_fso.manage_intervention.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Manage interventions">
                <div>
                    <h4>What do you want to do?</h4>
                    <ul>
                        <li><strong>Create Back-Order</strong> button: create a new Work Order with incomplete tasks.</li>
                        <li><strong>Mark All Done</strong> button: Mark all tasks as completed.</li>
                    </ul>
                </div>
                <footer>
                    <button string="Create Back-Order" name="create_back_order" type="object" class="oe_highlight"/>
                    <button string="Mark All Done" name="mark_all_done" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
</odoo>