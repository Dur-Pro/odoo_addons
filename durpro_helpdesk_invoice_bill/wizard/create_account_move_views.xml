<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="create_account_move_wizard" model="ir.ui.view" >
            <field name="name">helpdesk.create.account.move.wizard</field>
<!--            <field t-if="move_type == 'out_invoice'" name="name">Create a new Invoice from this ticket</field>-->
<!--            <field t-if="move_type == 'out_invoice'" name="name">Create a new Vendor Bill from this ticket</field>-->
            <field name="model">helpdesk.create.account_move</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group col="2">
                            <group>
                                <field name="move_type" invisible="1"/>
                                <field name="helpdesk_ticket_id" invisible="1"/>
                                <field name="company_id" invisible="1"/>
                                <field name="partner_id" string="Customer"
                                        widget="res_partner_many2one"
                                        context="{'res_partner_search_mode': 'customer'}"
                                        invisible="move_type != 'out_invoice'"/>
                                <field name="partner_id" string="Vendor"
                                        context="{'res_partner_search_mode': 'supplier'}"
                                        invisible="move_type != 'in_invoice'"/>
                                <field name="sale_id"
                                        invisible="move_type != 'out_invoice'"
                                        domain="[('partner_id','=', partner_id)]"/>
                                <field name="purchase_id" invisible="move_type != 'in_invoice'"
                                        domain="[('partner_id','=', partner_id)]"/>
                            </group>
                        </group>
                    </sheet>
                    <footer invisible="move_type != 'out_invoice'">
                        <button string="Create &amp; View Invoice"
                                class="btn btn-primary"
                                name="action_generate_and_view_invoice"
                                type="object"
                                data-hotkey="q"
                                invisible="sale_id != False or move_type != 'out_invoice'"/>
                        <button string="Create Invoice"
                                class="btn btn-primary"
                                name="action_generate_invoice"
                                type="object" data-hotkey="w"
                                invisible="sale_id != False or move_type != 'out_invoice'"/>
                        <button name="%(sale.action_view_sale_advance_payment_inv)d"
                                string="Create Invoice"
                                type="action"
                                class="btn-primary"
                                data-hotkey="q"
                                invisible="move_type != 'out_invoice' or sale_id == False"
                                context="{'helpdesk_ticket_id': helpdesk_ticket_id, 'sale_id': [sale_id]}"/>
                        <button string="Discard"
                                class="btn btn-secondary"
                                special="cancel"
                                data-hotkey="z"
                                invisible="move_type != 'out_invoice'"/>
                        <button string="Create &amp; View Vendor Bill"
                                class="btn btn-primary"
                                name="action_generate_and_view_bill"
                                type="object"
                                data-hotkey="q"
                                invisible="move_type != 'in_invoice'"/>
                        <button string="Create Vendor Bill"
                                class="btn btn-primary"
                                name="action_generate_bill"
                                type="object"
                                data-hotkey="w"
                                invisible="move_type != 'in_invoice'"/>
                        <button string="Discard"
                                class="btn btn-secondary"
                                special="cancel"
                                data-hotkey="z"
                                invisible="move_type != 'in_invoice'"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="view_sale_advance_payment_inv_helpdesk" model="ir.ui.view">
            <field name="name">Invoice Orders From Helpdesk</field>
            <field name="model">sale.advance.payment.inv</field>
            <field name="inherit_id" ref="sale.view_sale_advance_payment_inv"/>
            <field name="arch" type="xml">
                <xpath expr="//form/group" position="inside">
                    <field name="helpdesk_ticket_id" invisible="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>