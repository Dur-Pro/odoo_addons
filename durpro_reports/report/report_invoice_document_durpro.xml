<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!--   Add the text "Billing Address:" before the billing address on invoices     -->
        <template id="report_invoice_document_sale_durpro" inherit_id="account.report_invoice_document">
            <xpath expr="//div[@name='address_not_same_as_shipping']/t/address" position="before">
                    <strong>Billing Address:</strong>
            </xpath>
        </template>
        <!--   Change the wording shown on the bottom of invoices for remitting payment   -->
        <template id="report_invoice_document_durpro" inherit_id="account.report_invoice_document">
            <xpath expr="//p[@name='payment_communication']/b/span" position="replace">
                <span t-field="o.company_id.global_client_invoice_notes"/>
            </xpath>
        </template>
    </data>
</odoo>