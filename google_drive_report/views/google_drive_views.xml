<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <!-- add google drive report config field in user form -->
        <record id="view_google_drive_report_config_tree" model="ir.ui.view">
            <field name="name">google_drive.report.config.tree</field>
            <field name="model">google.drive.report.config</field>
            <field name="arch" type="xml">
                <tree string="Google Drive Report Configuration">
                    <field name="name"/>
                    <field name="model_id"/>
                    <field name="ir_exports_id"/>
                </tree>
            </field>
        </record>

        <record id="view_google_drive_report_config_form" model="ir.ui.view">
            <field name="name">google_drive.report.config.form</field>
            <field name="model">google.drive.report.config</field>
            <field name="arch" type="xml">
                <form string="Google Drive Report Configuration">
                    <group>
                        <field name="name"/>
                        <field name="active"/>
                        <field name="model_id"/>
                        <field name="model" invisible="1"/>
                        <field name="ir_exports_id" domain="[('resource', '=', model)]"/>
                        <field name="google_drive_file_url" placeholder="https://docs.google.com/document/d/1vOtpJK9scIQz6taD9tJRIETWbEw3fSiaQHArsJYcua4/edit" required="1"/>
                        <field name="last_status" readonly="1"/>
                    </group>
                </form>
            </field>
        </record>

        <record id='action_google_drive_report_config' model='ir.actions.act_window'>
            <field name='name'>Google Drive Reports</field>
            <field name='res_model'>google.drive.report.config</field>
            <field name='type'>ir.actions.act_window</field>
<!--
            No more needed un v13
            <field name='view_type'>form</field>
-->
            <field name="view_mode">tree,form</field>
            <field name='view_id' ref='view_google_drive_report_config_tree'/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add a new report configuration.
                </p>
            </field>
        </record>

</odoo>
