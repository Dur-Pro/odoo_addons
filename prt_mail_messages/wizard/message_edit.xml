<odoo>
    <!--#################
   # Edit Message #
   ######################-->
    <!-- ## Form view ## -->
    <record id="cx_message_edit_wiz_form" model="ir.ui.view">
        <field name="name">cx.message.edit.wiz.form</field>
        <field name="model">cx.message.edit.wiz</field>
        <field name="arch" type="xml">
            <form string="Edit">
                <div class="oe_form_box_info oe_text_center" colspan="2" invisible="can_edit == True" name="can_edit">
                    <p>
                        Not enough access rights to edit this message
                    </p>
                </div>
                <field invisible="1" name="message_id"/>
                <field invisible="1" name="can_edit"/>
                <field invisible="can_edit == False" name="body" nolabel="1"/>
                <footer>
                    <button class="btn-primary" invisible="can_edit == False" name="save" string="Save" type="object"/>
                    <button class="oe_link" name="cancel" special="cancel" string="Cancel"/>
                </footer>
            </form></field>
    </record>
</odoo>
