<odoo>
    <!--#######################
        # Message Move Wizard #
        #######################-->
    <!-- ## Form view ## -->
    <record id="prt_message_move_form" model="ir.ui.view">
        <field name="name">prt.message.move.form</field>
        <field name="model">prt.message.move.wiz</field>
        <field name="arch" type="xml">
            <form create="false" edit="false" string="Move messages">
                <div class="oe_form_box_info oe_text_center" colspan="2" name="pro">
                    <p>
                        Please purchase
                        <a href="https://apps.odoo.com/apps/modules/11.0/prt_mail_messages_pro" target="_blank">
                            Pro Version
                        </a>
                        to use this feature
                    </p>
                </div>
                <group>
                    <label for="model_to"/>
                    <div class="o_row">
                        <field context="{'message_move_wiz':1}" name="model_to"/>
                        <button class="oe_link" groups="base.group_system" icon="fa-arrow-right" name="%(prt_mail_messages.cx_model_reference_action)d" string="Configure referable" type="action"/>
                    </div>
                    <field name="notify"/>
                    <field invisible="1" name="is_conversation"/>
                    <field invisible="1" name="is_lead"/>
                    <field invisible="is_lead == False" name="lead_delete"/>
                    <field invisible="is_lead == False or lead_delete == False" name="opp_delete"/>
                </group>
                <footer>
                    <button class="oe_link" invisible="1" name="message_move" special="cancel" string="Move"/>
                    <button class="oe_link" name="cancel" special="cancel" string="Cancel"/>
                </footer>
            </form></field>
    </record>
</odoo>
